    const row = 92 - i;
    sheet.getRange(row, 1).setFormula(`=TODAY()-${i}`).setNumberFormat('yyyy-mm-dd');
    sheet.getRange(row, 2).setFormula(`=COUNTIFS('Lead Data'!Q:Q,"<="&A${row},'Lead Data'!P:P,TRUE)-COUNTIFS('Lead Data'!V:V,"<="&A${row},'Lead Data'!U:U,TRUE)`);
  }
  
  sheet.hideSheet();
}

